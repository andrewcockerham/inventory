<h1>Listing Purchase Orders</h1>

<table>
  <thead>
    <tr>
      <th> Date </th>
      <th> PO number </th>
      <th> Part Number </th>
      <th> Supplier </th>
      <th> Order Description </th>
      <th> Amount </th>
    </tr>
  </thead>

  <tbody>
    <% @purchase_orders.each do |purchase_order| %>
      <tr>
        <td><%= purchase_order.Date %></td>
        <td><%= link_to purchase_order.purchase_order_number, purchase_order %></td>
        <td><% purchase_order.items.each do |item| %>
          <%= item.part_number %>
        <% end %></td>
        <td><% purchase_order.suppliers.each do |supplier| %>
          <%= link_to supplier.name, supplier %>
        <% end %></td>
        <td><%= purchase_order.description %></td>
        <td> <%= number_to_currency(purchase_order.amount) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

