    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <!-- Supplier -->
  <b><%= f.label :supplier_ids, "Supplier" %></b><br>
       <%= f.collection_select :supplier_ids, Supplier.order(:name), :id, :name, {}, {multiple: true} %><br>

  <div class="field">
    <%= f.label :on_order_qty %><br>
    <%= f.number_field :on_order_qty %>
  </div>
  <div class="field">
    <%= f.label :in_inspection_qty %><br>
    <%= f.number_field :in_inspection_qty %>
  </div>
  <div class="field">
    <%= f.label :stock_qty %><br>
    <%= f.number_field :stock_qty %>
  </div>
  <div class="field">
    <%= f.label :ncmr_qty %><br>
    <%= f.number_field :ncmr_qty %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
